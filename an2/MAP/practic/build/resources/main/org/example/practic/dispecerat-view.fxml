<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.practic.Controller.DispeceratView" prefHeight="400.0" prefWidth="600.0">

    <!-- Label for form header -->
    <Label text="Create New Order" layoutX="220" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Starting Address -->
    <Label text="Starting Address:" layoutX="50" layoutY="70"/>
    <TextField fx:id="startingAddressField" layoutX="180" layoutY="65" prefWidth="300"/>

    <!-- Destination Address -->
    <Label text="Destination Address:" layoutX="50" layoutY="120"/>
    <TextField fx:id="destinationAddressField" layoutX="180" layoutY="115" prefWidth="300"/>

    <!-- Client Name -->
    <Label text="Client Name:" layoutX="50" layoutY="170"/>
    <TextField fx:id="clientNameField" layoutX="180" layoutY="165" prefWidth="300"/>

    <!-- Submit Button -->
    <Button text="Create Order" layoutX="220" layoutY="220" onAction="#createOrder"/>
</AnchorPane>
